use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function donation_stripe_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the donation_stripe module.
    case 'help.page.donation_stripe':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Stripe Payment method for donation') . '</p>';
      return $output;

    default:
  }
}

