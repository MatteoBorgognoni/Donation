/**
 * Implements hook_page_attachments().
 */
function donation_stripe_page_attachments(&$attachments) {
  
  $attachments['#attached']['html_head'][] = [
    [
      '#type' => 'html_tag',
      '#tag' => 'script',
      '#weight' => 100,
      '#attributes' => [
        'src' => 'https://js.stripe.com/v2/',
      ],
    ],
    'stripe-js'
  ];

}